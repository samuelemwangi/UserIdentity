	</ItemGroup>
	<ItemGroup>
		<ProjectReference Include="..\UserIdentity\UserIdentity.csproj" />
	</ItemGroup>
	<ItemGroup>
		<None Update="xunit.runner.json">
			<CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
		</None>
	</ItemGroup>
</Project>
