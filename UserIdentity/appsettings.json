{
	"Serilog": {
		"Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
		"MinimumLevel": "Warning",
		"WriteTo": [
			{ "Name": "Console" }
		],
		"Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
		"Destructure": [
			{
				"Name": "ToMaximumDepth",
				"Args": { "maximumDestructuringDepth": 4 }
			},
			{
				"Name": "ToMaximumStringLength",
				"Args": { "maximumStringLength": 100 }
			},
			{
				"Name": "ToMaximumCollectionCount",
				"Args": { "maximumCollectionCount": 10 }
			}
		],
		"Properties": {
			"Application": "UserIdentity"
		}
	},
	"MysqlSettings": {
		"Host": "localhost",
		"Port": "33061",
		"Database": "useridentity",
		"UserName": "root",
		"Password": "root"
	},
	"JwtIssuerOptions": {
		"Issuer": "appv1",
		"ValidForSeconds": "180",
		"Audience": "http://test.app.com"
	},
	"KeySetOptions": {
		"ServiceCanGenerateTokens": true,
		"KeyId": "key1",
		"PrivateKeyPath": "EDDSA_PRIVATE_KEY",
		"PrivateKeyPassPhrase": "S3T@G00dPa22Phr@S3",
		"PublicKeyPath": "EDDSA_PUBLIC_KEY"
	},
	"ApiKeySettings": {
		"ExcludedUris": "/jwks/keys",
		"ApiKey": "TestApiKey"
	},
	"CorsSettings": {
		"Name": "UserIdentity-CorsPolicy",
		"AllowedOrigins": "https://localhost:7242,http://localhost:5000,http://localhost:3000"
	},
	"RoleSettings": {
		"ServiceName": "UserIdentity"
	},
	"RegisteredAppsSettings": {
		"RegisteredApps": [
			{
				"AppName": "TestApp",
				"BaseUrl": "http://localhost:3000",
				"AppSecretKey": "S3TAG00dSeC8E7"
			}
		]
	},
	"ExternalServicesSettings": {
		"ExternalServices": {
			"AppCallback": {
				"TimeoutSeconds": 150,
				"DefaultHeaders": {
					"X-Api-Key": "TestApiKey"
				}
			},
			"GoogleRecaptcha": {
				"BaseUrl": "https://www.google.com/recaptcha/api/",
				"TimeoutSeconds": 60
			}
		}
	},
	"GoogleRecaptchaSettings": {
		"Enabled": false,
		"SiteKey": "TestSiteKey"
	},
	"IdentityUserSettings": {
		"PasswordRequireDigit": true,
		"PasswordRequireNonAlphanumeric": true,
		"PasswordRequiredLength": 8
	},
	"KafkaSettings": {
		"BootstrapServers": "localhost:9095",
		"SchemaRegistryUrl": "localhost:8084",
		"ProducerEnabled": true,
		"ProducerTopics": {
			"UserUpdated": "useridentity.user.updated"
		},
		"ConsumerEnabled": true,
		"ConsumerGroupId": "useridentity-consumer-group",
		"ConsumerTopics": {
			"MessageManagerUserUpdatedKafkaMessageConsumer": "messagemanager.user.updated"
		}
	},
	"DefaultResetPasswordMessage": "If we have an account matching your email address, you will receive an email with a link to reset your password.",
	"AllowedHosts": "*"
}
