{
	"Serilog": {
		"Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
		"MinimumLevel": "Warning",
		"WriteTo": [
			{ "Name": "Console" },
			{
				"Name": "File",
				"Args": { "path": "Logs/log.txt" }
			}
		],
		"Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
		"Destructure": [
			{
				"Name": "ToMaximumDepth",
				"Args": { "maximumDestructuringDepth": 4 }
			},
			{
				"Name": "ToMaximumStringLength",
				"Args": { "maximumStringLength": 100 }
			},
			{
				"Name": "ToMaximumCollectionCount",
				"Args": { "maximumCollectionCount": 10 }
			}
		],
		"Properties": {
			"Application": "UserIdentity"
		}
	},
	"MysqlSettings": {
		"Host": "DB_SERVER",
		"Port": "DB_PORT",
		"Database": "DB_NAME",
		"UserName": "DB_USER",
		"Password": "DB_PASSWORD"
	},
	"JwtIssuerOptions": {
		"Issuer": "APP_ISSUER",
		"ValidFor": "APP_VALID_FOR",
		"Audience": "APP_AUDIENCE"
	},
	"KeySetOptions": {
		"KeyId": "APP_KEY_ID",
		"PrivateKeyPath": "APP_PRIVATE_KEY_PATH",
		"PrivateKeyPassPhrase": "APP_PRIVATE_KEY_PASS_PHRASE",
		"PublicKeyPath": "APP_PUBLIC_KEY_PATH"
	},
	"DefaultRole": "APP_DEFAULT_ROLE",
	"DefaultResetPasswordMessage": "APP_DEFAULT_RESET_PASSWORD_MESSAGE",
	"Logging": {
		"LogLevel": {
			"Default": "Information",
			"Microsoft.AspNetCore": "Warning"
		}
	},
	"AllowedHosts": "*"
}
